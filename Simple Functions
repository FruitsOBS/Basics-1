#include <iostream>

int Add(int x, int y)

{
	std::cout << "In Add(), received " << x << " and " << y << "\n";
	std::cout << "The value returned is : ";
	return (x + y);
}
int main()
{
	std::cout << "I'm in main()!\n";
	std::cout << "\nCalling Add()\n";
	std::cout <<  Add (3, 4);
	std::cout << "\nBack in Main().\n";
	std::cout << "\nExiting...\n\n";
	
	system("pause > 0");
	return 0;
}
